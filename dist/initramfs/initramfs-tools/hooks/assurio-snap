#!/bin/sh

PREREQ=""

prereqs()
{
	echo "${PREREQ}"
}

case "${1}" in
prereqs)
	prereqs
	exit 0
	;;
esac

. /usr/share/initramfs-tools/hook-functions

mkdir -p ${DESTDIR}/etc/assurio/dla/mnt
copy_exec /sbin/blkid
copy_exec /sbin/blockdev
copy_exec /usr/bin/aioctl
copy_exec /var/lib/assurio/dla/reload /sbin/assurio_reload

manual_add_modules assurio-snap

exit 0

